generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Market {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  addressId      String?   @unique @db.ObjectId
  address        Address?  @relation("MarketAddress", fields: [addressId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  profilePicture String?
  ownerId        String   @db.ObjectId
  managersIds    String[] @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  carts          Cart[]   // Relation for carts per market
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String    @unique
  password       String?
  auth0Id        String?   @unique
  phone          String?
  profilePicture String?
  birthDate      DateTime?
  gender         String?
  address        String?
  refreshToken   String?
  role           UserRole  @default(CUSTOMER)
  marketId       String?   @db.ObjectId // ID do mercado (sem relação)
  addresses      Address[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  Cart           Cart[]
}

model Address {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String?  @db.ObjectId
  user         User?    @relation(fields: [userId], references: [id])
  marketId     String?  @unique @db.ObjectId
  market       Market?  @relation("MarketAddress")
  name         String
  street       String
  number       String
  complement   String?
  neighborhood String
  city         String
  state        String
  zipCode      String
  isFavorite   Boolean  @default(false)
  isActive     Boolean  @default(true)
  latitude     Float?
  longitude    Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Categories {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String        @unique
  slug          String        @unique
  description   String?
  subCategories SubCategory[] @relation("CategorySubCategories")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  products      Product[]

}

model Product {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  price         Float
  unit          String       @default("unidade")
  marketId      String       @db.ObjectId // ID do mercado (sem relação)
  categoryId    String?      @db.ObjectId
  category      Categories?  @relation(fields: [categoryId], references: [id])
  subCategoryId String?      @db.ObjectId
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id])
  sku           String?      @unique @default(uuid())
  image         String?
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  cartItems     CartItem[]
}

model Deliverer {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  document  String          @unique
  phone     String
  status    DelivererStatus @default(ACTIVE)
  vehicle   Vehicle
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model Order {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  userId        String        @db.ObjectId // ID do usuário (sem relação)
  marketId      String        @db.ObjectId // ID do mercado (sem relação)
  delivererId   String?       @db.ObjectId // ID do entregador (sem relação)
  couponId      String?       @db.ObjectId // ID do cupom (sem relação)
  addressId     String        @db.ObjectId // ID do endereço de entrega
  status        OrderStatus   @default(PENDING)
  total         Float
  discount      Float? // Valor do desconto aplicado
  paymentMethod PaymentMethod @default(CREDIT_CARD)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model OrderItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   @db.ObjectId // ID do pedido (sem relação)
  productId String   @db.ObjectId // ID do produto (sem relação)
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Coupon {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  code          String     @unique
  name          String
  description   String?
  type          CouponType @default(PERCENTAGE)
  value         Float
  minOrderValue Float?
  maxDiscount   Float?
  usageLimit    Int?
  usedCount     Int        @default(0)
  isActive      Boolean    @default(true)
  validFrom     DateTime   @default(now())
  validUntil    DateTime?
  marketId      String?    @db.ObjectId
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @db.ObjectId
  user      User       @relation(fields: [userId], references: [id])
  marketId  String?    @db.ObjectId
  market    Market?    @relation(fields: [marketId], references: [id])
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([userId, marketId])
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String   @db.ObjectId
  cart      Cart     @relation(fields: [cartId], references: [id])
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubCategory {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String
  description String?
  categoryId  String    @db.ObjectId
  category    Categories @relation("CategorySubCategories", fields: [categoryId], references: [id])
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([categoryId])
  @@map("SubCategories")
}

type Vehicle {
  type        String // "bicicleta", "moto", "carro"
  plate       String?
  description String?
}

enum DelivererStatus {
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY_FOR_DELIVERY
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

enum UserRole {
  CUSTOMER
  OWNER
  MANAGER
}

enum CouponType {
  PERCENTAGE
  FIXED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  PIX
  CASH
}

enum MessageStatus {
  NOT_SENT
  SENT
  DELIVERED
  READ
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  ACTIVE
  EXPIRED
}

model DeliverySettings {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  marketId       String   @unique @db.ObjectId
  deliveryRadius Float    @default(5.0) // Raio em km
  deliveryFee    Float    @default(5.0) // Valor da entrega
  allowsPickup   Boolean  @default(true) // Permite retirada
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Suggestion {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId // ID do usuário (sem relação)
  task      String
  data      Json // JSON com os dados da sugestão
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  chatId        String    @unique // Formato: {userId}-{marketId}
  userId        String    @db.ObjectId // ID do cliente
  marketId      String    @db.ObjectId // ID do market (lojista)
  isActive      Boolean   @default(true) // Se o chat está ativo
  lastMessageAt DateTime? // Timestamp da última mensagem
  messages      Message[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([marketId])
}

model Message {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  chatId    String        @db.ObjectId // ID do chat
  chat      Chat          @relation(fields: [chatId], references: [id], onDelete: Cascade)
  username  String // Nome do usuário que enviou
  userId    String        @db.ObjectId // ID do usuário que enviou (cliente ou lojista)
  message   String // Conteúdo da mensagem
  status    MessageStatus @default(SENT) // Status da mensagem
  readAt    DateTime? // Quando a mensagem foi lida pelo destinatário
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([chatId])
  @@index([userId])
  @@index([createdAt])
  @@index([readAt])
  @@index([status])
}

model Campaign {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  marketId  String         @db.ObjectId
  title     String
  imageUrl  String
  slot      Int // 1 a 8
  startDate DateTime
  endDate   DateTime?
  status    CampaignStatus @default(DRAFT)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@unique([marketId, slot, startDate, endDate])
  @@index([marketId])
  @@index([slot])
  @@index([status])
  @@index([startDate])
  @@index([endDate])
}
